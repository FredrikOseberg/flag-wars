{
  "name": "feature-flag-game",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --watch server.ts --exec ts-node server.ts",
    "dev:optimized": "nodemon --watch optimized-server.ts --exec ts-node optimized-server.ts",
    "dev:client": "webpack serve --mode development --port 8080",
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --mode production",
    "build:server": "tsc server.ts --outDir dist --esModuleInterop --skipLibCheck",
    "build:optimized": "tsc optimized-server.ts --outDir dist --esModuleInterop --skipLibCheck",
    "build:all": "npm run build:client && npm run build:optimized",
    "start": "node dist/optimized-server.js",
    "start:optimized": "node dist/optimized-server.js",
    "start:prod": "node dist/optimized-server.js",
    "railway:start": "npm run build:all && node dist/optimized-server.js",
    "vercel-build": "npm run build:all",
    "heroku-postbuild": "npm run build:all",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.4",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.12",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
